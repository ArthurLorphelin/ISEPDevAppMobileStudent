<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sign_up_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUp"
    android:orientation="vertical"
    android:background="@color/white">

    <Button
        android:id="@+id/return_to_sign_in_page_from_sign_up_page"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Back to Sign In"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:backgroundTint="#8B0000">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:textColor="@color/black"
        android:textSize="30sp">
    </TextView>

    <EditText
        android:id="@+id/sign_up_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ..."
        android:textColor="@color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:inputType="textEmailAddress">
    </EditText>

    <EditText
        android:id="@+id/sign_up_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password ..."
        android:textColor="@color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:id="@+id/sign_up_first_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name ..."
        android:textColor="@color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:inputType="textMultiLine">
    </EditText>

    <EditText
        android:id="@+id/sign_up_last_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name ..."
        android:textColor="@color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:inputType="textMultiLine">
    </EditText>

    <EditText
        android:id="@+id/sign_up_student_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Number"
        android:textColor="@color/black"
        android:textColorHint="#D3D3D3"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:inputType="number">
    </EditText>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:backgroundTint="#8B0000"
        android:textColorHint="#8B0000"
        android:layout_marginTop="30dp">
    </Button>

</LinearLayout>